//desafio Sandro obsoleto

void setup() { 
  size(800,600);
  background(255);
  frameRate(40);
  
}

void draw() {
  
 strokeWeight(2);
 line(0,random(height),width/2,random(height));
 line(width/2,random(height),width,random(height));
 
}


