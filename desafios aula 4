//desfio a-ha, aula 4(parque laje)


void setup() {
  size(800,400);
  background(255);
   stroke(255,0,0);
  line(0,0,800,300);
  
}

void draw() {
 
  stroke(0,30);
  line(0,0,random(width),random(height));
  
}


